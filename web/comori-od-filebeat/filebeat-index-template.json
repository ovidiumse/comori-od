{
  "mappings": {
    "dynamic": true,
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "time_local": {
        "type": "date",
        "format": "dd/MMM/yyyy:HH:mm:ss xxxx"
      },
      "message": {
        "type": "text"
      },
      "offset": {
        "type": "long",
        "doc_values": true
      },
      "bytes_sent": {
        "type": "long"
      },
      "geoip"  : {
        "type" : "object",
        "dynamic": true,
        "properties" : {
          "location" : { "type" : "geo_point" }
        }
      }
    }
  },
  "settings": {
    "index.refresh_interval": "5s"
  },
  "template": "filebeat-*"
}